<%- include("../partials/header.ejs") %>

<div class="jumbotron">
	<div class="d-flex justify-content-center">
		<h1 class="mobilegames-h1">Welcome to the Mobile Games Page!</h1>
	</div>
	
	<div class="d-flex justify-content-center">
		<h4 class="mobilegames-h3">
			Click the Buttons to View More of the User's Favorite Mobile Games
		</h4>
	</div>
	
</div>

<div class="d-flex justify-content-center mobilegamesToVideogames-btn">
	<a href="/videogames" class="mobileGamesBtn btn btn-success">View Video Games</a>
</div>

<div class="row">
	
	<% users.forEach(function(user){ %>
		<div class="mobilegames-user card">
			<div class="card-title d-flex justify-content-center">
				<button class="mobilegames-user-btn btn btn-info"><%=user.username%></button> 
			</div>
			<% mobilegamesYear = "0"; mobilegamesImage = ""; %>
			<% user.mobilegames.forEach(function(mobilegames){ %>
				 <% if(parseInt(mobilegames.year) > parseInt(mobilegamesYear)){ %>
					<% mobilegamesYear = mobilegames.year; mobilegamesImage = mobilegames.image %>
				 <% } %>
			<% }) %>
			<div class="mobilegame-year-div d-flex justify-content-center"><h3><%=mobilegamesYear%></h3></div>
			<div class="d-flex justify-content-center"><img class="mobilegames-users-image" src="<%=mobilegamesImage%>"></div>
			<div class="card-body">
				<div class="d-flex justify-content-center"><a href="/mobilegames/<%=user._id%>" class="btn btn-success">View <%=user.username%>'s Mobile Games</a></div>
			</div>
		</div>
	<% }) %>
	
</div>




<%- include("../partials/footer.ejs") %>
