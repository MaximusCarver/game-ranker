<%- include("../partials/header.ejs") %>

<div class="container partialsDivContainer">
	<div class="jumbotron">
		<div class="d-flex justify-content-center">
			<h1 class="videogames-new-h1">
				Edit Videogames
			</h1>
		</div>
	</div>
</div>

<form action="/videogames/<%=user._id%>/games/<%=videogames._id%>?_method=PUT" method="POST">
	<div class="form-group">
		<div class="d-flex justify-content-center"><input class="videogames-new form-control" value="<%=videogames.firstPlace%>" name="videogames[firstPlace]"></div>
		<div class="d-flex justify-content-center"><input class="videogames-new form-control" value="<%=videogames.secondPlace%>" name="videogames[secondPlace]"></div>
		<div class="d-flex justify-content-center"><input class="videogames-new form-control" value="<%=videogames.thirdPlace%>" name="videogames[thirdPlace]"></div>
		<div class="d-flex justify-content-center"><input class="videogames-new form-control" value="<%=videogames.image%>" name="videogames[image]"></div>
		<div class="d-flex justify-content-center"><input class="videogames-new form-control" value="<%=videogames.year%>" name="videogames[year]"></div>
		<div class="d-flex justify-content-center"><button class="videogames-new-btn btn btn-success" type="submit">Submit</button></div>
	</div>
</form>


<%- include("../partials/footer.ejs") %>