<%- include("../partials/header.ejs") %>


<div class="jumbotron videogames-jumbtron">
	<div class="d-flex justify-content-center">
		<h1 class="videogames-h1">
			Welcome to the Video Games Page!
		</h1>
	</div>

	<div class="d-flex justify-content-center">
		<h4 class="videogames-h3">
			Click the Buttons to View More of the User's Favorite Video Games
		</h4>
	</div>
</div>


<div class="d-flex justify-content-center videogamesToMobilegames-btn"><a href="/mobilegames" class="videoGamesBtn btn btn-success">View Mobile Games</a></div>

<div class="row">
	
	<% users.forEach(function(user){ %>
		<div class="videogames-user card">
			<div class="card-title d-flex justify-content-center">
				<button class="videogames-user-btn btn btn-info"><%=user.username%></button> 
			</div>
			<% videogamesYear = "0"; videogamesImage = ""; %>
			<% user.videogames.forEach(function(videogames){ %>
				 <% if(parseInt(videogames.year) > parseInt(videogamesYear)){ %>
					<% videogamesYear = videogames.year; videogamesImage = videogames.image %>
				 <% } %>
			<% }) %>
			<div class="videogame-year-div d-flex justify-content-center"><h3><%=videogamesYear%></h3></div>
			<div class="d-flex justify-content-center"><img class="videogames-users-image img-thumbnail" src="<%=videogamesImage%>"></div>
			<div class="card-body">
				<div class="d-flex justify-content-center"><a href="/videogames/<%=user._id%>" class="btn btn-success">View <%=user.username%>'s Video Games</a></div>
			</div>
		</div>
	<% }) %>
	
</div>







<%- include("../partials/footer.ejs") %>