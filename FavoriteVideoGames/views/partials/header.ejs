<!DOCTYPE html>

<html>
	
	<head>
		
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
		
	</head>	
	
	
	<body>
		
		
		<nav class="navbar navbar-expand-lg navbar-light ">
		  <a class="navbar-brand" href="/">Favorite Videogames</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		  <span class="navbar-toggler-icon"></span>
		  </button>

		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="nav navbar-nav  navbar-right mr-auto">
			  <% if(!currentUser){ %> 
				  <li class="nav-item">
					<a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link" href="/register">Sign Up</a>
				  </li>
			  <% } else { %>
			  	<li class="nav-item">
					<a class="nav-link" href="/logout">Logout</a>
				</li>
			  <% } %>
			</ul>
		  </div>

		</nav>
		

			<% if(successMessage && successMessage.length > 0){ %>
				<div class="container partialsDivContainer">
					<div class="d-flex justify-content-center alert alert-success">
						<%= successMessage %>
					</div>
				</div>
			<% } %>

			<% if(errorMessage && errorMessage.length > 0){ %>
				<div class="container partialsDivContainer">
					<div class="d-flex justify-content-center alert alert-danger">
						<%= errorMessage %>
					</div>
				</div>
			<% } %>

			<% if(updateMessage && updateMessage.length > 0){ %>
				<div class="container partialsDivContainer">
					<div class="d-flex justify-content-center alert alert-info">
						<%= updateMessage %>
					</div>
				</div>
			<% } %>

			<% if(warningMessage && warningMessage.length > 0){ %>
				<div class="container partialsDivContainer">
					<div class="d-flex justify-content-center alert alert-warning">
						<%= warningMessage %>
					</div>
				</div>
			<% } %> 
		
	